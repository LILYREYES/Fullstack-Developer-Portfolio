---
---
import { Picture } from 'astro:assets';
import ProfilePicture from '../assets/profile.png';

const profile = {
    name: 'Myriam L Reyes',
    title: 'Full Stack Developer',
    location: 'Hannover, Germany',
    description: 'I am a fullstack web developer with a strong focus on user experience (UX/UI) and results-driven digital marketing.'
};
---

<div class="flex flex-col gap-6 items-center text-center sm:items-start sm:text-left">

    <div class="flex flex-col sm:flex-row gap-4 sm:items-center">

        <Picture
            src={ProfilePicture}
            formats={['webp']}
            width={96}
            height={96}
            alt={'Profile picture ' + profile.name}
            title={profile.name}
            class="w-24 h-24 rounded-xl object-cover border-2 border-primary mx-auto sm:mx-0"
        />

        <div>

            <h1 class="text-2xl font-extrabold mb-1 inline-block relative text-text-primary">
                {profile.name}
            </h1>

            <p class="text-sm mb-2 text-primary">
                {profile.title}
            </p>

            <p class="flex items-center justify-center sm:justify-start text-sm text-gray-400">
                <svg class="-mt-0.5 inline mr-2"fill=none height=14 stroke=currentColor stroke-linecap=round stroke-linejoin=round stroke-width=2 viewBox="0 0 24 24"width=14 xmlns=http://www.w3.or[...]}
                {profile.location}
            </p>

        </div>

    </div>

    <p class="text-sm leading-relaxed mt-4 text-gray-400">
        {profile.description}
    </p>

</div>
